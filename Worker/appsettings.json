{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=controllerdb.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ListenerOptions": {
    "Ports": [
      {
        "PortName": "/dev/ttyUSB0",
        "IsRS485": false
